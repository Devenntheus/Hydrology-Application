<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Square base layer with rounded corners -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#D3D3D3" />
            <corners android:radius="60dp" />
        </shape>
    </item>

    <!-- Yellow Circle (outermost, smaller) -->
    <item android:top="30dp" android:bottom="30dp" android:left="30dp" android:right="30dp">
        <shape android:shape="oval">
            <solid android:color="#FFD800" />
        </shape>
    </item>

    <!-- Dark Gray Circle (middle) -->
    <item android:top="80dp" android:bottom="80dp" android:left="80dp" android:right="80dp">
        <shape android:shape="oval">
            <solid android:color="#A9A9A9" />
        </shape>
    </item>

    <!-- Red Circle (inner) -->
    <item android:top="90dp" android:bottom="90dp" android:left="90dp" android:right="90dp">
        <shape android:shape="oval">
            <solid android:color="#B22222" />
        </shape>
    </item>

</layer-list>