<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer Circle - Light Gray -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#D3D3D3"/>
        </shape>
    </item>

    <!-- Middle Circle - Black -->
    <item android:top="8dp" android:bottom="8dp" android:left="8dp" android:right="8dp">
        <shape android:shape="oval">
            <solid android:color="#000000"/>
        </shape>
    </item>

    <!-- Inner Circle - Dark Yellow (pressed effect) -->
    <item android:top="16dp" android:bottom="16dp" android:left="16dp" android:right="16dp">
        <shape android:shape="oval">
            <solid android:color="#C6A300"/>
        </shape>
    </item>

</layer-list>